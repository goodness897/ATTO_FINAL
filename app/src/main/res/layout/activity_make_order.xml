<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_edit_layout"
    android:orientation="vertical"
    tools:context="com.atto.developers.atto.MakeOrderActivity">

    <android.support.v7.widget.Toolbar
        app:theme="@style/ToolBarStyle"
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_underline_background"
        android:minHeight="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/view_make_order_cstop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/include6"
            layout="@layout/view_make_order_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" />

        <Button
            android:id="@+id/btn_update_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_btn"
            android:text="최종수락"
            android:textColor="@color/white" />

    </LinearLayout>

    </ScrollView>

</LinearLayout>
